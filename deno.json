{
    "compilerOptions": {
      "allowJs": true,
      "lib": ["deno.window"],
      "strict": true
    },
    "lint": {
      "include": ["src/"],
      "exclude": ["src/testdata/"],
      "rules": {
        "tags": ["recommended"],
        "include": ["ban-untagged-todo"],
        "exclude": ["no-unused-vars"]
      }
    },
    "fmt": {
      "useTabs": true,
      "lineWidth": 80,
      "indentWidth": 4,
      "semiColons": false,
      "singleQuote": true,
      "proseWrap": "preserve",
      "include": ["src/"],
      "exclude": ["src/testdata/"]
    },
    "lock": false,
    "nodeModulesDir": true,
    "unstable": ["webgpu"],
    "npmRegistry": "https://mycompany.net/artifactory/api/npm/virtual-npm",
    "test": {
      "include": ["src/"],
      "exclude": ["src/testdata/", "src/fixtures/**/*.ts"]
    },
    "tasks": {
      "serve": "deno run --allow-read src/bot.ts",
      "dev": "deno run --watch src/bot.ts"
    },
    "imports": {
      "std/": "https://deno.land/std@0.224.0/"
    },
    "exclude": [
      "dist/"
    ]
  }